{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./lib",
    "strict": true,
    "rootDir": "./src",
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "types": ["jest", "react"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__tests__", "**/__mocks__"],
}
